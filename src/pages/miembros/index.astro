---
import Layout from '../../layouts/main.astro';
import MembersList from '../../components/MembersList.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { Users } from 'lucide-react';
---

<Layout content={{ title: 'Miembros - Cubusfera', description: 'Conoce a todos los miembros de la comunidad Cubusfera. Descubre quiénes forman parte de nuestro servidor de Minecraft y únete a nuestra familia de jugadores.' }}>
  <Breadcrumb items={[
      { label: 'Inicio', href: '/' },
      { label: 'Miembros' }
    ]} />
  
  <div class="container mx-auto px-4 space-y-16 mt-8">
    {/* Hero Section */}
    <div class="text-center space-y-6">
      <div class="inline-flex items-center rounded-full border border-brand-green/30 bg-brand-green/10 px-3 py-1 text-sm font-medium text-brand-green">
        <Users className="mr-2 h-4 w-4" />
        Comunidad Activa
      </div>
      
      <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-6xl">
        Miembros de <span class="text-brand-green">Cubusfera</span>
      </h1>
      
      <p class="mx-auto max-w-2xl text-lg text-muted-foreground leading-relaxed">
        Descubre a todos los jugadores que forman parte de nuestra increíble comunidad técnica.
      </p>
    </div>

    {/* Members List */}
    <div>
      <MembersList />
    </div>
  </div>
</Layout>