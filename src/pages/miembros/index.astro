---
export const prerender = true; 
import Layout from '../../layouts/main.astro';
import Navbar from '../../components/Navbar';
import MembersList from '../../components/MembersList.astro';
import TopsSection from '../../components/TopsSection.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
---

<Layout content={{ title: 'Miembros - Cubusfera', description: 'Conoce a todos los miembros de la comunidad Cubusfera. Descubre quiénes forman parte de nuestro servidor de Minecraft y únete a nuestra familia de jugadores.' }}>
    <Navbar client:load />
    <main class="min-h-screen bg-white dark:bg-[#122118]">
      <Breadcrumb items={[
         { label: 'Inicio', href: '/' },
         { label: 'Jugadores', nonClickable: true },
         { label: 'Miembros' }
       ]} />
      
      <!-- Hero Section -->
      <div class="relative bg-gradient-to-br border-b from-gray-100 via-gray-50 to-gray-100 dark:from-[#264532] dark:via-[#122118] dark:to-[#1b3124] border-gray-200 dark:border-[#366348]">
        <div class="absolute inset-0 opacity-5 bg-grid-pattern"></div>
        <div class="container relative px-4 py-20 mx-auto">
          <div class="space-y-8 text-center">
            <div class="inline-flex items-center px-4 py-2 mb-4 text-sm font-medium rounded-full border bg-gray-200 dark:bg-[#264532] border-gray-300 dark:border-[#366348] text-green-600 dark:text-[#38e07b]">
              <svg class="mr-2 w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 13.75c-2.34 0-7 1.17-7 3.5V19h14v-1.75c0-2.33-4.66-3.5-7-3.5zM4.34 17c.84-.58 2.87-1.25 4.66-1.25s3.82.67 4.66 1.25H4.34zM9 12c1.93 0 3.5-1.57 3.5-3.5S10.93 5 9 5 5.5 6.57 5.5 8.5 7.07 12 9 12zm0-5c.83 0 1.5.67 1.5 1.5S9.83 10 9 10s-1.5-.67-1.5-1.5S8.17 7 9 7zm7.04 6.81c1.16.84 1.96 1.96 1.96 3.44V19h4v-1.75c0-2.02-3.5-3.17-5.96-3.44zM15 12c1.93 0 3.5-1.57 3.5-3.5S16.93 5 15 5c-.54 0-1.04.13-1.5.35.63.89 1 1.98 1 3.15s-.37 2.26-1 3.15c.46.22.96.35 1.5.35z"/>
              </svg>
              Comunidad Activa
            </div>
            <h1 class="text-5xl font-bold leading-tight md:text-7xl text-gray-900 dark:text-white">
              <span>Miembros</span>
              <br class="hidden sm:block" />
              <span>de Cubusfera</span>
            </h1>
            <p class="mx-auto max-w-3xl text-xl leading-relaxed md:text-2xl text-gray-600 dark:text-[#96c5a9]">
              Descubre a todos los jugadores que forman parte de nuestra increíble comunidad de Minecraft
            </p>
          </div>
        </div>
      </div>



      <!-- Members Grid -->
      <div class="container px-4 py-16 mx-auto">
        <div class="mb-8 text-center">
          <h2 class="mb-4 text-3xl font-bold text-gray-900 dark:text-white md:text-4xl">
            Todos los Miembros
          </h2>
          <p class="text-lg text-gray-600 dark:text-[#96c5a9]">
            Explora los perfiles de todos nuestros jugadores
          </p>
        </div>
        
        <MembersList server:defer>
          <div slot="fallback" class="py-12 text-center">
            <div class="inline-flex items-center px-4 py-2 mb-4 text-sm font-medium rounded-full border bg-gray-200 dark:bg-[#264532] border-gray-300 dark:border-[#366348] text-green-600 dark:text-[#38e07b]">
              <svg class="mr-3 -ml-1 w-5 h-5 animate-spin text-green-600 dark:text-[#38e07b]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Cargando miembros...
            </div>
            <p class="text-gray-600 dark:text-[#96c5a9]">Obteniendo la lista de miembros de la comunidad</p>
          </div>
        </MembersList>
        </div>
        <hr class="border-gray-200 dark:border-[#366348]">
            <!-- Statistics Section -->
      <div class="container px-4 py-16 mx-auto">
        <TopsSection />
      </div>
    </main>
</Layout>