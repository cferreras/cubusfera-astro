---
import Layout from '../../layouts/main.astro';
import Navbar from '../../components/Navbar';

// Obtener la URL de la API desde las variables de entorno
const WHITELIST_API_URL = (import.meta.env as ImportMetaEnv & {
  WHITELIST_API_URL?: string
}).WHITELIST_API_URL || 'http://localhost:8080/whitelist';

let members: string[] = [];
let error = null;

try {
  // Obtener lista de miembros de la whitelist
  const whitelistResponse = await fetch(WHITELIST_API_URL);
  if (whitelistResponse.ok) {
    members = await whitelistResponse.json();
  } else {
    error = `Error al obtener la lista de miembros: ${whitelistResponse.status}`;
  }
} catch (e) {
  error = `Error de conexión: ${(e as Error).message}`;
}
---

<Layout content={{ title: 'Miembros - Cubusfera', description: 'Conoce a todos los miembros de la comunidad Cubusfera. Descubre quiénes forman parte de nuestro servidor de Minecraft y únete a nuestra familia de jugadores.' }}>
    <Navbar client:load />
    <main class="min-h-screen bg-background">
      <!-- Hero Section -->
      <div class="relative bg-gradient-to-br from-primary/5 via-background to-secondary/5 border-b">
        <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
        <div class="container mx-auto px-4 py-20 relative">
          <div class="text-center space-y-8">
            <div class="inline-flex items-center px-4 py-2 bg-primary/10 border border-primary/20 rounded-full text-sm font-medium text-primary mb-4">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              Comunidad Activa
            </div>
            <h1 class="text-5xl md:text-7xl font-bold text-foreground leading-tight">
              <span>Miembros</span>
              <br class="hidden sm:block" />
              <span>de Cubusfera</span>
            </h1>
            <p class="text-xl md:text-2xl text-muted-foreground max-w-3xl mx-auto leading-relaxed">
              Descubre a todos los jugadores que forman parte de nuestra increíble comunidad de Minecraft
            </p>
          </div>
        </div>
      </div>

      <!-- Members Section -->
      <div class="container mx-auto px-4 py-16">

        {error ? (
          <div class="flex justify-center">
            <div class="bg-gradient-to-br from-destructive/5 to-destructive/10 border border-destructive/20 rounded-2xl p-8 max-w-lg mx-auto backdrop-blur-sm">
              <div class="text-center space-y-4">
                <div class="w-16 h-16 mx-auto bg-destructive/20 rounded-full flex items-center justify-center">
                  <svg class="w-8 h-8 text-destructive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-destructive">Error de Conexión</h3>
                <p class="text-destructive/80 font-medium">{error}</p>
                <p class="text-muted-foreground text-sm">
                  Verifica que la API esté funcionando en: <code class="bg-muted px-2 py-1 rounded text-xs">{WHITELIST_API_URL}</code>
                </p>
              </div>
            </div>
          </div>
        ) : (
          <div class="space-y-8">
            
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 2xl:grid-cols-8 gap-6">
              {members.map((member: string) => (
                <a 
                  href={`/miembros/${member}`}
                  class="group flex flex-col items-center space-y-4 p-6 rounded-lg bg-card border border-border hover:border-primary/50 transition-all duration-200 hover:scale-105 hover:shadow-lg"
                >
                  <div class="relative">
                    <img 
                      src={`https://mc-heads.net/avatar/${member}/80`}
                      alt={`Avatar de ${member}`}
                      class="w-20 h-20 rounded-lg shadow-md group-hover:shadow-lg transition-shadow duration-200"
                      loading="lazy"
                    />
                  </div>
                  <div class="text-center space-y-1">
                    <span class="text-sm font-semibold text-foreground group-hover:text-primary transition-colors duration-200 block">
                      {member}
                    </span>
                    <span class="text-xs text-muted-foreground group-hover:text-primary/70 transition-colors duration-200">
                      Ver estadísticas
                    </span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}

        {!error && members.length === 0 && (
          <div class="text-center">
            <div class="bg-muted/50 rounded-lg p-8 max-w-md mx-auto">
              <p class="text-muted-foreground">
                No se encontraron miembros en la lista.
              </p>
            </div>
          </div>
        )}
      </div>
    </main>
</Layout>