---
export const prerender = true;
import Layout from "../layouts/main.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import Card from "../components/ui/Card.astro";
import Button from "../components/Button.astro";
import { getCollection } from 'astro:content';
import { MapPin, Tag, ArrowRight } from 'lucide-react';

const proyectos = await getCollection('proyectos');

const proyectosData = proyectos.map(proyecto => ({
  id: proyecto.slug,
  titulo: proyecto.data.titulo,
  descripcion: proyecto.data.descripcion,
  imagen: proyecto.data.imagen,
  etiquetas: proyecto.data.etiquetas,
  dimension: proyecto.data.dimension,
  coordenadas: proyecto.data.coordenadas
}));

const todasLasEtiquetas = [...new Set(proyectosData.flatMap(p => p.etiquetas))];
---

<Layout
  content={{
    title: "Proyectos - Cubusfera",
    description: "Explora los increíbles proyectos construidos por la comunidad de Cubusfera. Desde granjas técnicas hasta ciudades impresionantes.",
  }}
>
  <Breadcrumb items={[
    { label: 'Inicio', href: '/' },
    { label: 'Proyectos' }
  ]} />
  
  <div class="container mx-auto px-4 space-y-12 mt-8 mb-20">
    {/* Header */}
    <div class="text-center space-y-4">
      <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-5xl">
        Proyectos de <span class="text-brand-green">Cubusfera</span>
      </h1>
      <p class="mx-auto max-w-2xl text-lg text-muted-foreground">
        Descubre las increíbles construcciones y granjas técnicas creadas por nuestra comunidad.
      </p>
    </div>

    {/* Filters */}
    <div class="flex flex-wrap justify-center gap-2" id="filters-container">
      <button 
        class="filter-btn px-4 py-2 rounded-full bg-brand-green text-brand-green-fg text-sm font-medium shadow-sm transition-colors"
        data-filter="all"
      >
        Todos
      </button>
      {todasLasEtiquetas.map(tag => (
        <button 
          class="filter-btn px-4 py-2 rounded-full bg-muted text-muted-foreground hover:bg-muted/80 hover:text-foreground text-sm font-medium transition-colors"
          data-filter={tag}
        >
          {tag}
        </button>
      ))}
    </div>

    {/* Grid */}
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3" id="projects-grid">
      {proyectosData.map((proyecto) => (
        <Card 
          class="project-card group flex flex-col overflow-hidden p-0 border-border/50 hover:border-brand-green/30 transition-all duration-300 hover:shadow-lg"
          data-tags={proyecto.etiquetas.join(',')}
        >
          <div class="relative aspect-video overflow-hidden bg-muted">
            <a href={`/proyectos/${proyecto.id}`} class="block w-full h-full">
              <img
                src={proyecto.imagen || '/placeholder-project.jpg'}
                alt={proyecto.titulo}
                class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
                <span class="text-white font-medium flex items-center gap-2">
                  Ver detalles <ArrowRight className="h-4 w-4" />
                </span>
              </div>
            </a>
          </div>
          
          <div class="flex flex-col flex-1 p-6">
            <div class="flex items-start justify-between gap-4 mb-4">
              <h3 class="text-xl font-bold text-foreground group-hover:text-brand-green transition-colors">
                {proyecto.titulo}
              </h3>
              {proyecto.dimension && (
                <span class="shrink-0 inline-flex items-center rounded-md bg-muted px-2 py-1 text-xs font-medium text-muted-foreground ring-1 ring-inset ring-border">
                  {proyecto.dimension}
                </span>
              )}
            </div>
            
            <p class="text-muted-foreground line-clamp-3 mb-6 flex-1">
              {proyecto.descripcion}
            </p>
            
            <div class="space-y-4">
              <div class="flex flex-wrap gap-2">
                {proyecto.etiquetas.slice(0, 3).map((tag) => (
                  <span class="inline-flex items-center gap-1 rounded-full bg-brand-green/10 px-2.5 py-0.5 text-xs font-medium text-brand-green">
                    <Tag className="h-3 w-3" />
                    {tag}
                  </span>
                ))}
                {proyecto.etiquetas.length > 3 && (
                  <span class="inline-flex items-center gap-1 rounded-full bg-muted px-2.5 py-0.5 text-xs font-medium text-muted-foreground">
                    +{proyecto.etiquetas.length - 3}
                  </span>
                )}
              </div>
              
              {proyecto.coordenadas && (
                <div class="flex items-center text-xs text-muted-foreground font-mono bg-muted/50 p-2 rounded">
                  <MapPin className="mr-2 h-3 w-3 text-brand-green" />
                  X: {proyecto.coordenadas.x} Y: {proyecto.coordenadas.y} Z: {proyecto.coordenadas.z}
                </div>
              )}
              
              <Button href={`/proyectos/${proyecto.id}`} variant="outline" className="w-full group-hover:border-brand-green/50 group-hover:text-brand-green">
                Ver Proyecto
              </Button>
            </div>
          </div>
        </Card>
      ))}
    </div>
  </div>

  <script>
    function initFilters() {
      const filterButtons = document.querySelectorAll('.filter-btn');
      const projectCards = document.querySelectorAll('.project-card');

      if (filterButtons.length === 0) return;

      function setActiveButton(activeBtn) {
        // Query buttons again to ensure we are targeting the ones currently in the DOM
        const currentButtons = document.querySelectorAll('.filter-btn');
        currentButtons.forEach(btn => {
          // Reset styles
          btn.classList.remove('bg-brand-green', 'text-brand-green-fg');
          btn.classList.add('bg-muted', 'text-muted-foreground');
        });
        
        // Set active styles
        activeBtn.classList.remove('bg-muted', 'text-muted-foreground');
        activeBtn.classList.add('bg-brand-green', 'text-brand-green-fg');
      }

      filterButtons.forEach(button => {
        // Remove existing listeners to avoid duplicates if re-initialized
        const newButton = button.cloneNode(true);
        button.parentNode.replaceChild(newButton, button);
        
        newButton.addEventListener('click', () => {
          const filter = newButton.getAttribute('data-filter');
          setActiveButton(newButton);

          projectCards.forEach(card => {
            const tags = card.getAttribute('data-tags')?.split(',') || [];
            const htmlCard = card;
            
            if (filter === 'all' || tags.includes(filter)) {
              htmlCard.style.display = 'flex';
              // Optional: Add fade-in animation
              htmlCard.style.opacity = '0';
              requestAnimationFrame(() => {
                htmlCard.style.transition = 'opacity 0.3s ease';
                htmlCard.style.opacity = '1';
              });
            } else {
              htmlCard.style.display = 'none';
            }
          });
        });
      });
    }

    // Run on initial load
    document.addEventListener('DOMContentLoaded', initFilters);
    
    // Run on view transitions navigation (if enabled)
    document.addEventListener('astro:page-load', initFilters);
  </script>
</Layout>
