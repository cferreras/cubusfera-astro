---
export const prerender = true;
import Layout from "../layouts/main.astro";
import MapContainer from "../components/MapContainer";
import { Map as MapIcon } from "lucide-react";
---

<Layout
    content={{
        title: "Cubusfera - Mapa",
        description:
            "Explora el mundo de Cubusfera con nuestro mapa interactivo en tiempo real. Descubre ubicaciones, estructuras y puntos de interés en nuestro servidor de Minecraft.",
    }}
>
    <section class="py-20 h-[calc(100vh-4rem)] flex flex-col">
        <div class="container mx-auto px-4 mb-8 flex-shrink-0">
            <div class="text-center space-y-4">
                <div class="inline-flex items-center px-3 py-1 rounded-full bg-brand-green/10 text-brand-green text-sm font-medium border border-brand-green/20">
                    <MapIcon className="w-4 h-4 mr-2" />
                    Mapa en Tiempo Real
                </div>
                <h1 class="text-3xl md:text-4xl font-bold text-foreground">Mapa del Mundo</h1>
            </div>
        </div>
        
        <div class="flex-1 container mx-auto px-4 min-h-0">
            <div class="h-full w-full rounded-2xl overflow-hidden border border-border shadow-2xl">
                <MapContainer client:only="react" />
            </div>
        </div>
    </section>
</Layout>
