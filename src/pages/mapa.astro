---
export const prerender = true;
import Layout from '../layouts/main.astro';
import Navbar from '../components/Navbar';
import Breadcrumb from '../components/Breadcrumb.astro';
---

<Layout content={{ title: 'Cubusfera - Mapa', description: 'Explora el mundo de Cubusfera con nuestro mapa interactivo en tiempo real. Descubre ubicaciones, estructuras y puntos de interés en nuestro servidor de Minecraft.' }}>
  <style>
    .loading-spinner {
      border: 3px solid rgba(107, 114, 128, 0.3);
      border-radius: 50%;
      border-top: 3px solid #6b7280;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
    }
    
    .dark .loading-spinner {
      border: 3px solid rgba(255, 255, 255, 0.3);
      border-top: 3px solid #ffffff;
    }
    
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    .fade-out {
      opacity: 0;
      transition: opacity 0.5s ease-out;
    }
  </style>

  <Navbar client:load />
    <main class="min-h-screen bg-white dark:bg-[#122118]">
      <Breadcrumb items={[
        { label: 'Inicio', href: '/' },
        { label: 'Servidor', nonClickable: true },
        { label: 'Mapa' }
      ]} />
      
      <div class="container px-4 py-8 mx-auto">
        <div class="mb-8 space-y-6 text-center">
          <h1 class="text-3xl font-bold md:text-4xl text-gray-900 dark:text-white">
            <span class="text-green-600 dark:text-[#38e07b]">Mapa</span> de Cubusfera
          </h1>
          <p class="mx-auto max-w-2xl text-lg text-gray-600 dark:text-[#96c5a9]">
            Explora nuestro mundo de Minecraft en tiempo real
          </p>
        </div>
        
        <!-- Contenedor del mapa -->
        <div class="overflow-hidden relative mt-4 w-full rounded-lg border border-gray-200 dark:border-[#366348] bg-gray-50 dark:bg-[#1b3124]" style="height: 70vh; min-height: 600px;">
          <!-- Loading overlay -->
          <div id="loading-overlay" class="flex absolute inset-0 z-10 flex-col justify-center items-center bg-gray-50 dark:bg-[#1b3124]">
            <div class="mb-4 loading-spinner"></div>
            <p class="font-medium text-gray-600 dark:text-[#96c5a9]">Cargando mapa...</p>
            <p class="mt-2 text-sm text-gray-600 dark:text-[#96c5a9]">Esto puede tomar unos segundos</p>
          </div>
          
          <!-- Iframe del mapa -->
          <iframe
            id="map-iframe"
            src="https://mapa.cubusfera.com/#world:0:0:0:1500:0:0:0:0:perspective"
            class="border-0"
            style="width: 100%; height: 100%;"
            title="Mapa de Cubusfera"
            loading="lazy"
            onload="hideLoading()"
          ></iframe>
        </div>
        
        <!-- Enlace para ver en pantalla completa -->
        <div class="mt-6 text-center">
          <a 
            href="https://mapa.cubusfera.com/#world:0:0:0:1500:0:0:0:0:perspective" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex gap-2 items-center px-6 py-3 font-medium rounded-lg transition-colors duration-200 bg-green-600 dark:bg-[#38e07b] text-white dark:text-black hover:bg-green-700 dark:hover:bg-[#264532] dark:hover:text-white"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            Ver en pantalla completa
          </a>
        </div>
        
      </div>
    </main>
    
    <script is:inline>
      function hideLoading() {
        const overlay = document.getElementById('loading-overlay');
        if (overlay) {
          overlay.classList.add('fade-out');
          setTimeout(() => {
            overlay.style.display = 'none';
          }, 500);
        }
      }
      
      // Fallback: ocultar loading después de 10 segundos si no se carga
      setTimeout(() => {
        hideLoading();
      }, 10000);
    </script>
</Layout>