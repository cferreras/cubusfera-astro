---
import Layout from '../layouts/main.astro';
import Navbar from '../components/Navbar';
import DynamicTopsSelector from '../components/DynamicTopsSelector';
---

<Layout content={{ title: 'Cubusfera - Top', description: 'Descubre los rankings y estadísticas de los mejores jugadores de nuestro servidor de Minecraft. Ve quién lidera en tiempo de juego, bloques minados, construcciones y más.' }}>
  <Navbar client:load />
  
  <main class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-8">
      <DynamicTopsSelector client:load />
    </div>
  </main>
</Layout>
