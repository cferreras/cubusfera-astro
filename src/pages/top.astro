---
import Layout from '../layouts/main.astro';
import Navbar from '../components/Navbar';
import TopsSection from '../components/TopsSection.astro';
---

<Layout content={{ title: 'Cubusfera - Top', description: 'Descubre los rankings y estadísticas de los mejores jugadores de nuestro servidor de Minecraft. Ve quién lidera en tiempo de juego, bloques minados, construcciones y más.' }}>
  <Navbar client:load />
  
  <main class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-8">
      <TopsSection server:defer>
        <div slot="fallback" class="flex items-center justify-center min-h-[400px]">
          <div class="text-center space-y-4">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary mx-auto"></div>
            <p class="text-muted-foreground">Cargando rankings...</p>
          </div>
        </div>
      </TopsSection>
    </div>
  </main>
</Layout>
