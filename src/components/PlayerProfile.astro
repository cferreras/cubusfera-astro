<script>
document.addEventListener('DOMContentLoaded', function() {
  function toggleTooltip(tooltipId: string) {
    const tooltip = document.getElementById(tooltipId);
    if (tooltip) {
      tooltip.classList.toggle('hidden');
    }
  }

  function toggleExpand(expandId: string, button: HTMLElement) {
    const content = document.getElementById(expandId);
    const arrow = button.querySelector('svg');
    if (content && arrow) {
      content.classList.toggle('hidden');
      arrow.classList.toggle('rotate-180');
    }
  }

  // Agregar event listeners a los botones de tooltip
  const tooltipButtons = document.querySelectorAll('[data-tooltip]');
  tooltipButtons.forEach(button => {
    button.addEventListener('click', function(this: HTMLElement) {
      const tooltipId = this.getAttribute('data-tooltip');
      if (tooltipId) {
        toggleTooltip(tooltipId);
      }
    });
  });

  // Agregar event listeners a los botones de expansión en PlayerProfile
  const expandButtons = document.querySelectorAll('[data-expand="profile-help"]');
  expandButtons.forEach(button => {
    button.addEventListener('click', function(this: HTMLElement) {
      const expandId = this.getAttribute('data-expand');
      if (expandId) {
        toggleExpand(expandId, this);
      }
    });
  });

  // Cerrar tooltips cuando se hace clic fuera
  document.addEventListener('click', function(event) {
    const tooltips = ['bio-tooltip', 'social-tooltip'];
    const target = event.target as HTMLElement;
    
    if (!target) return;
    
    tooltips.forEach(tooltipId => {
      const tooltip = document.getElementById(tooltipId);
      const button = target.closest(`[data-tooltip="${tooltipId}"]`);
      
      if (tooltip && !tooltip.contains(target) && !button) {
        tooltip.classList.add('hidden');
      }
    });
  });
});
</script>
