---
import Card from './ui/Card.astro';
import { 
  User, 
  HelpCircle, 
  Share2, 
  Activity, 
  Clock, 
  Calendar,
  Twitter,
  Youtube,
  Instagram,
  MessageSquare
} from 'lucide-react';

interface Props {
  member: string;
}

interface SocialData {
  discord?: string;
  twitter?: string;
  youtube?: string;
  instagram?: string;
}

interface ProfileData {
  bio?: string;
  social?: SocialData;
  lastPlayed?: string;
  lastPlayedISO?: string;
  totalPlayTime?: string;
  totalPlayTimeMs?: number;
  lastPlayedTimestamp?: number;
}

const { member } = Astro.props;

// Obtener los datos del perfil desde la API
const PROFILE_API_URL = `https://stats.cubusfera.com/profile/${member}`;

let profileData: ProfileData | null = null;
let profileError: string | null = null;

try {
  const response = await fetch(PROFILE_API_URL);
  if (response.ok) {
    profileData = await response.json();
    console.log(profileData)
  } else if (response.status === 404) {
    // Perfil no encontrado, esto es normal y no debe mostrar error
    console.log('Perfil no encontrado, esto es normal');
    profileData = null;
  } else if (response.status === 502 || response.status === 503 || response.status === 504) {
    // Servidor desconectado - no mostrar error ya que es normal
    console.log('Servidor de Minecraft desconectado, esto es normal');
    profileData = null;
  } else {
    profileError = `Error al obtener el perfil: ${response.status}`;
  }
} catch (e) {
  // Error de red o servidor no disponible - no mostrar error ya que es normal cuando el servidor está apagado
  if (e instanceof TypeError && (e as TypeError).message.includes('fetch')) {
    console.log('Servidor de Minecraft desconectado, esto es normal');
    profileData = null;
  } else {
    profileError = `Error de conexión al obtener el perfil`;
    console.error('Profile fetch error:', e);
  }
}

// Función para validar si hay contenido social válido
function hasSocialContent(social: any): boolean {
  if (!social || typeof social !== 'object') return false;

  const { discord, twitter, youtube, instagram } = social;
  return !!(discord || twitter || youtube || instagram);
}

// Función para obtener el nombre mostrable de la plataforma
function getPlatformDisplayName(platform: string): string {
  switch (platform) {
    case 'discord':
      return 'Discord';
    case 'twitter':
      return 'X/Twitter';
    case 'youtube':
      return 'YouTube';
    case 'instagram':
      return 'Instagram';
    default:
      return platform;
  }
}

// Función para formatear el tiempo relativo
function formatRelativeTime(lastPlayedISO: string): string {
  const now = new Date();
  const lastPlayed = new Date(lastPlayedISO);
  const diffMs = now.getTime() - lastPlayed.getTime();

  const minutes = Math.floor(diffMs / (1000 * 60));
  const hours = Math.floor(diffMs / (1000 * 60 * 60));
  const days = Math.floor(diffMs / (1000 * 60 * 60 * 24));

  if (minutes < 1) {
    return 'hace un momento';
  } else if (minutes < 60) {
    return `hace ${minutes} minuto${minutes !== 1 ? 's' : ''}`;
  } else if (hours < 24) {
    return `hace ${hours} hora${hours !== 1 ? 's' : ''}`;
  } else if (days < 30) {
    return `hace ${days} día${days !== 1 ? 's' : ''}`;
  } else {
    return lastPlayed.toLocaleDateString('es-ES', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
  }
}
---

{profileError ? (
  <div class="mb-8">
    <div class="p-4 text-center border border-red-800 rounded-lg bg-red-900/20">
      <p class="text-sm text-red-300">Error al cargar el perfil: {profileError}</p>
    </div>
  </div>
) : profileData && (profileData.bio || hasSocialContent(profileData.social) || profileData.lastPlayed || profileData.totalPlayTime) ? (
  <div class="mb-8 space-y-6">
    {/* Sección de Biografía */}
    {profileData.bio && (
      <Card class="p-0">
        <div class="p-6 border-b border-border bg-muted/30 relative rounded-t-lg">
          <h3 class="flex items-center justify-between">
            <div class="flex items-center space-x-2 text-lg font-semibold text-foreground">
              <User className="w-5 h-5 text-blue-600 dark:text-blue-400" />
              <span>Biografía</span>
            </div>
            <div class="relative">
              <button
                class="text-muted-foreground hover:text-blue-600 dark:hover:text-[#38e07b] transition-colors p-1 rounded-full hover:bg-blue-50 dark:hover:bg-[#38e07b]/10"
                data-tooltip="bio-tooltip"
                aria-label="Información sobre cómo añadir biografía"
              >
                <HelpCircle className="w-5 h-5" />
              </button>
              <!-- Tooltip información biografía -->
              <div id="bio-tooltip" class="hidden absolute top-12 -right-2.5 z-50 w-80 p-4 bg-popover border border-border rounded-lg shadow-xl">
                <div class="flex items-start space-x-3">
                  <HelpCircle className="w-5 h-5 text-blue-600 dark:text-[#38e07b] mt-0.5 flex-shrink-0" />
                  <div class="flex-1 min-w-0">
                    <p class="font-semibold text-blue-800 dark:text-[#38e07b] mb-1">¿Cómo añadir biografía?</p>
                    <p class="mb-2 text-sm text-muted-foreground">En el servidor usa el comando:</p>
                    <code class="block p-2 text-sm bg-muted text-foreground rounded border border-border font-mono">
                      /bio &lt;tu biografía&gt;
                    </code>
                  </div>
                </div>
                <!-- Flecha apuntando al botón -->
                <div class="absolute -top-2 right-4 w-4 h-4 bg-popover border-l border-t border-border transform rotate-45"></div>
              </div>
            </div>
          </h3>
        </div>

        <div class="p-6">
          <p class="text-foreground leading-relaxed">
            {profileData.bio}
          </p>
        </div>
      </Card>
    )}

    {/* Sección de Redes Sociales */}
    {hasSocialContent(profileData.social) && (
      <Card class="p-0">
        <div class="p-6 border-b border-border bg-muted/30 relative rounded-t-lg">
          <h3 class="flex items-center justify-between">
            <div class="flex items-center space-x-2 text-lg font-semibold text-foreground">
              <Share2 className="w-5 h-5 text-purple-600 dark:text-purple-400" />
              <span>Redes Sociales</span>
            </div>
            <div class="relative">
              <button
                class="text-muted-foreground hover:text-purple-600 dark:hover:text-[#38e07b] transition-colors p-1 rounded-full hover:bg-purple-50 dark:hover:bg-[#38e07b]/10"
                data-tooltip="social-tooltip"
                aria-label="Información sobre cómo añadir redes sociales"
              >
                <HelpCircle className="w-5 h-5" />
              </button>
              <!-- Tooltip información redes sociales -->
              <div id="social-tooltip" class="hidden absolute top-12 -right-2.5 z-50 w-80 p-4 bg-popover border border-border rounded-lg shadow-xl">
                <div class="flex items-start space-x-3">
                  <HelpCircle className="w-5 h-5 text-purple-600 dark:text-[#38e07b] mt-0.5 flex-shrink-0" />
                  <div class="flex-1 min-w-0">
                    <p class="font-semibold text-purple-800 dark:text-[#38e07b] mb-1">¿Cómo añadir redes sociales?</p>
                    <p class="mb-2 text-sm text-muted-foreground">En el servidor usa los comandos:</p>
                    <div class="space-y-1 text-sm">
                      <code class="block p-2 bg-muted text-foreground rounded border border-border font-mono">
                        /social discord &lt;tu_usuario&gt;
                      </code>
                      <code class="block p-2 bg-muted text-foreground rounded border border-border font-mono">
                        /social twitter &lt;enlace_completo&gt;
                      </code>
                      <code class="block p-2 bg-muted text-foreground rounded border border-border font-mono">
                        /social youtube &lt;enlace_completo&gt;
                      </code>
                      <code class="block p-2 bg-muted text-foreground rounded border border-border font-mono">
                        /social instagram &lt;enlace_completo&gt;
                      </code>
                    </div>
                  </div>
                </div>
                <!-- Flecha apuntando al botón -->
                <div class="absolute -top-2 right-4 w-4 h-4 bg-popover border-l border-t border-border transform rotate-45"></div>
              </div>
            </div>
          </h3>
        </div>

        <div class="p-6">
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            {profileData.social?.discord && (
              <div class="flex items-center space-x-4 p-4 rounded-lg bg-card border border-border">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 rounded-full bg-indigo-100 dark:bg-indigo-900/20 flex items-center justify-center">
                    <MessageSquare className="w-6 h-6 text-indigo-600 dark:text-indigo-400" />
                  </div>
                </div>
                <div class="flex-1">
                  <h4 class="font-semibold text-foreground">{getPlatformDisplayName('discord')}</h4>
                  <p class="text-sm text-muted-foreground">@{profileData.social.discord}</p>
                  <p class="text-xs text-muted-foreground/70">Usuario de Discord</p>
                </div>
              </div>
            )}

            {profileData.social?.twitter && (
              <a
                href={profileData.social.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center space-x-4 p-4 rounded-lg bg-card border border-border hover:bg-muted/50 transition-colors group"
              >
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 rounded-full bg-sky-100 dark:bg-sky-900/20 flex items-center justify-center">
                    <Twitter className="w-6 h-6 text-sky-600 dark:text-sky-400" />
                  </div>
                </div>
                <div class="flex-1">
                  <h4 class="font-semibold text-foreground group-hover:text-sky-600 dark:group-hover:text-sky-400 transition-colors">{getPlatformDisplayName('twitter')}</h4>
                  <p class="text-sm text-muted-foreground">Visitar perfil</p>
                  <p class="text-xs text-muted-foreground/70">Sígueme en X</p>
                </div>
              </a>
            )}

            {profileData.social?.youtube && (
              <a
                href={profileData.social.youtube}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center space-x-4 p-4 rounded-lg bg-card border border-border hover:bg-muted/50 transition-colors group"
              >
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 rounded-full bg-red-100 dark:bg-red-900/20 flex items-center justify-center">
                    <Youtube className="w-6 h-6 text-red-600 dark:text-red-400" />
                  </div>
                </div>
                <div class="flex-1">
                  <h4 class="font-semibold text-foreground group-hover:text-red-600 dark:group-hover:text-red-400 transition-colors">{getPlatformDisplayName('youtube')}</h4>
                  <p class="text-sm text-muted-foreground">Ver canal</p>
                  <p class="text-xs text-muted-foreground/70">Contenido y videos</p>
                </div>
              </a>
            )}

            {profileData.social?.instagram && (
              <a
                href={profileData.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center space-x-4 p-4 rounded-lg bg-card border border-border hover:bg-muted/50 transition-colors group"
              >
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 rounded-full bg-pink-100 dark:bg-pink-900/20 flex items-center justify-center">
                    <Instagram className="w-6 h-6 text-pink-600 dark:text-pink-400" />
                  </div>
                </div>
                <div class="flex-1">
                  <h4 class="font-semibold text-foreground group-hover:text-pink-600 dark:group-hover:text-pink-400 transition-colors">{getPlatformDisplayName('instagram')}</h4>
                  <p class="text-sm text-muted-foreground">Ver perfil</p>
                  <p class="text-xs text-muted-foreground/70">Fotos y contenido</p>
                </div>
              </a>
            )}
          </div>
        </div>
      </Card>
    )}

    {/* Sección de Actividad */}
    {profileData && (profileData.lastPlayed || profileData.totalPlayTime) && (
      <Card class="p-0 overflow-hidden">
        <div class="p-6 border-b border-border bg-muted/30">
          <h3 class="flex items-center space-x-2 text-lg font-semibold text-foreground">
            <Activity className="w-5 h-5 text-green-600 dark:text-green-400" />
            <span>Actividad</span>
          </h3>
        </div>

        <div class="p-6">
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            {profileData.lastPlayed && profileData.lastPlayedISO && (
              <div class="flex items-center space-x-4 p-4 rounded-lg bg-card border border-border">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 rounded-full bg-green-100 dark:bg-green-900/20 flex items-center justify-center">
                    <Calendar className="w-6 h-6 text-green-600 dark:text-green-400" />
                  </div>
                </div>
                <div class="flex-1">
                  <h4 class="font-semibold text-foreground">Última conexión</h4>
                  <p class="text-sm text-muted-foreground">{formatRelativeTime(profileData.lastPlayedISO)}</p>
                  <p class="text-xs text-muted-foreground/70">
                    {new Date(profileData.lastPlayedISO).toLocaleDateString('es-ES', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                      hour: '2-digit',
                      minute: '2-digit'
                    })}
                  </p>
                </div>
              </div>
            )}

            {profileData.totalPlayTime && (
              <div class="flex items-center space-x-4 p-4 rounded-lg bg-card border border-border">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-900/20 flex items-center justify-center">
                    <Clock className="w-6 h-6 text-blue-600 dark:text-blue-400" />
                  </div>
                </div>
                <div class="flex-1">
                  <h4 class="font-semibold text-foreground">Tiempo total jugado</h4>
                  <p class="text-sm text-muted-foreground">{profileData.totalPlayTime}</p>
                  {profileData.totalPlayTimeMs && (
                    <p class="text-xs text-muted-foreground/70">
                      {Math.round(profileData.totalPlayTimeMs / (1000 * 60 * 60)).toLocaleString()} horas en total
                    </p>
                  )}
                </div>
              </div>
            )}
          </div>
        </div>
      </Card>
    )}
  </div>
) : null}

<script>
document.addEventListener('DOMContentLoaded', function() {
  function toggleTooltip(tooltipId: string) {
    const tooltip = document.getElementById(tooltipId);
    if (tooltip) {
      tooltip.classList.toggle('hidden');
    }
  }

  function toggleExpand(expandId: string, button: HTMLElement) {
    const content = document.getElementById(expandId);
    const arrow = button.querySelector('svg');
    if (content && arrow) {
      content.classList.toggle('hidden');
      arrow.classList.toggle('rotate-180');
    }
  }

  // Agregar event listeners a los botones de tooltip
  const tooltipButtons = document.querySelectorAll('[data-tooltip]');
  tooltipButtons.forEach(button => {
    button.addEventListener('click', function(this: HTMLElement) {
      const tooltipId = this.getAttribute('data-tooltip');
      if (tooltipId) {
        toggleTooltip(tooltipId);
      }
    });
  });

  // Cerrar tooltips cuando se hace clic fuera
  document.addEventListener('click', function(event) {
    const tooltips = ['bio-tooltip', 'social-tooltip'];
    const target = event.target as HTMLElement;

    if (!target) return;

    tooltips.forEach(tooltipId => {
      const tooltip = document.getElementById(tooltipId);
      const button = target.closest(`[data-tooltip="${tooltipId}"]`);

      if (tooltip && !tooltip.contains(target) && !button) {
        tooltip.classList.add('hidden');
      }
    });
  });
});
</script>
