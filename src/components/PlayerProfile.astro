// Función para obtener el color de cada red social
function getSocialColor(platform: string): string {
  switch (platform) {
    case 'discord':
      return 'text-indigo-600 dark:text-indigo-400 hover:bg-indigo-50 dark:hover:bg-indigo-900/20';
    case 'twitter':
      return 'text-sky-600 dark:text-sky-400 hover:bg-sky-50 dark:hover:bg-sky-900/20';
    case 'youtube':
      return 'text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20';
    case 'instagram':
      return 'text-pink-600 dark:text-pink-400 hover:bg-pink-50 dark:hover:bg-pink-900/20';
    default:
      return 'text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-900/20';
  }
}

// Función para obtener el nombre mostrable de la plataforma
function getPlatformDisplayName(platform: string): string {
  switch (platform) {
    case 'discord':
      return 'Discord';
    case 'twitter':
      return 'X/Twitter';
    case 'youtube':
      return 'YouTube';
    case 'instagram':
      return 'Instagram';
    default:
      return platform;
  }
}

// Función para formatear el tiempo relativo
function formatRelativeTime(lastPlayedISO: string): string {
  const now = new Date();
  const lastPlayed = new Date(lastPlayedISO);
  const diffMs = now.getTime() - lastPlayed.getTime();
  
  const minutes = Math.floor(diffMs / (1000 * 60));
  const hours = Math.floor(diffMs / (1000 * 60 * 60));
  const days = Math.floor(diffMs / (1000 * 60 * 60 * 24));
  
  if (minutes < 1) {
    return 'hace un momento';
  } else if (minutes < 60) {
    return `hace ${minutes} minuto${minutes !== 1 ? 's' : ''}`;
  } else if (hours < 24) {
    return `hace ${hours} hora${hours !== 1 ? 's' : ''}`;
  } else if (days < 30) {
    return `hace ${days} día${days !== 1 ? 's' : ''}`;
  } else {
    return lastPlayed.toLocaleDateString('es-ES', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
  }
}
