---
import { mapPlayerStats, getTopStats, type PlayerStats } from '../lib/statsMapper';
import StatusMessage from './ui/StatusMessage.astro';
import Card from './ui/Card.astro';
import { 
  Clock, 
  Skull, 
  Footprints, 
  ArrowUp, 
  Swords, 
  Hammer, 
  Pickaxe, 
  Anvil, 
  Utensils, 
  Code, 
  Loader2,
  ChevronDown
} from 'lucide-react';

interface Props {
  member: string;
}

const { member } = Astro.props;

// Obtener la URL de la API desde las variables de entorno
const STATS_API_URL = import.meta.env.STATS_API_URL || 'https://stats.cubusfera.com/stats';

let rawPlayerData = null;
let playerStats: PlayerStats | null = null;
let topMined: { item: string; count: number; }[] = [];
let topCrafted: { item: string; count: number; }[] = [];
let topUsed: { item: string; count: number; }[] = [];
// Se eliminó análisis avanzado
let error = null;

try {
  const response = await fetch(`${STATS_API_URL}/${member}`);
  if (response.ok) {
    rawPlayerData = await response.json();
    playerStats = mapPlayerStats(rawPlayerData);
    topMined = getTopStats(rawPlayerData, 'mined', 5);
    topCrafted = getTopStats(rawPlayerData, 'crafted', 5);
    topUsed = getTopStats(rawPlayerData, 'used', 5);

  // Llamada a análisis avanzado eliminada
  } else if (response.status === 404) {
    error = 'Jugador no encontrado';
  } else if (response.status === 502 || response.status === 503 || response.status === 504) {
    error = 'El servidor de Minecraft está temporalmente desconectado. Intenta de nuevo más tarde.';
  } else {
    error = `Error al obtener las estadísticas: ${response.status}`;
  }
} catch (e) {
  // Error de red o servidor no disponible
  if (e instanceof TypeError && e.message.includes('fetch')) {
    error = 'El servidor de Minecraft está temporalmente desconectado. Intenta de nuevo más tarde.';
  } else {
    error = `Error de conexión: No se pudo conectar con la API`;
  }
}
---

{error ? (
  <div class="max-w-2xl mx-auto">
    <StatusMessage
      type={error.includes('servidor') || error.includes('desconectado') ? 'offline' : 'error'}
      message={error}
      title={error.includes('servidor') || error.includes('desconectado') ? undefined : 'Error al cargar estad\u00EDsticas'}
    />
  </div>
) : playerStats ? (
  <div class="space-y-8">
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
      <Card>
        <div class="flex items-center space-x-4">
          <div class="flex justify-center items-center w-12 h-12 rounded-lg bg-brand-green/10 text-brand-green">
            <Clock className="w-6 h-6" />
          </div>
          <div>
            <p class="text-sm font-medium text-muted-foreground">Tiempo Jugado</p>
            <p class="text-2xl font-bold text-foreground">{playerStats.playtime || '0h'}</p>
          </div>
        </div>
      </Card>

      <Card>
        <div class="flex items-center space-x-4">
          <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-red-500/10 text-red-600 dark:text-red-400">
            <Skull className="w-6 h-6" />
          </div>
          <div>
            <p class="text-sm font-medium text-muted-foreground">Muertes</p>
            <p class="text-2xl font-bold text-foreground">{playerStats.deaths || 0}</p>
          </div>
        </div>
      </Card>

      <Card>
        <div class="flex items-center space-x-4">
          <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-blue-500/10 text-blue-600 dark:text-blue-400">
            <Footprints className="w-6 h-6" />
          </div>
          <div>
            <p class="text-sm font-medium text-muted-foreground">Distancia</p>
            <p class="text-2xl font-bold text-foreground">{playerStats.distance || '0km'}</p>
          </div>
        </div>
      </Card>

      <Card>
        <div class="flex items-center space-x-4">
          <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-orange-500/10 text-orange-600 dark:text-orange-400">
             <ArrowUp className="w-6 h-6" />
           </div>
          <div>
            <p class="text-sm font-medium text-muted-foreground">Saltos</p>
            <p class="text-2xl font-bold text-foreground">{playerStats.jumps || 0}</p>
          </div>
        </div>
      </Card>
    </div>

  <!-- Se eliminó bloque de Análisis avanzado -->

    <!-- Secciones Detalladas -->
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
      <!-- Estadísticas de Combate -->
      <Card class="p-0 overflow-hidden">
        <div class="p-6 border-b border-border bg-muted/30">
          <h3 class="flex items-center space-x-2 text-lg font-semibold text-foreground">
            <Swords className="w-5 h-5 text-red-600 dark:text-red-400" />
            <span>Combate</span>
          </h3>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Mobs Eliminados</span>
            <span class="font-semibold text-foreground">{playerStats?.mobKills || 0}</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Jugadores Eliminados</span>
            <span class="font-semibold text-foreground">{playerStats?.playerKills || 0}</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Daño Infligido</span>
            <span class="font-semibold text-foreground">{playerStats?.damageDealt || 0}</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Daño Recibido</span>
            <span class="font-semibold text-foreground">{playerStats?.damageTaken || 0}</span>
          </div>
        </div>
      </Card>

      <!-- Estadísticas de Construcción -->
      <Card class="p-0 overflow-hidden">
        <div class="p-6 border-b border-border bg-muted/30">
          <h3 class="flex items-center space-x-2 text-lg font-semibold text-foreground">
            <Hammer className="w-5 h-5 text-amber-600 dark:text-amber-400" />
            <span>Construcción</span>
          </h3>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Bloques colocados</span>
            <span class="font-semibold text-foreground">{playerStats?.blocksPlaced || 0}</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Bloques rotos</span>
            <span class="font-semibold text-foreground">{playerStats?.blocksBroken || 0}</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Items crafteados</span>
            <span class="font-semibold text-foreground">{playerStats?.itemsCrafted || 0}</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Items usados</span>
            <span class="font-semibold text-foreground">{playerStats?.itemsUsed || 0}</span>
          </div>
        </div>
      </Card>
    </div>

    <!-- Secciones de Top Items -->
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      <!-- Top Bloques Minados -->
      <Card class="p-0 overflow-hidden">
        <div class="p-6 border-b border-border bg-muted/30">
          <h3 class="flex items-center space-x-2 text-lg font-semibold text-foreground">
            <Pickaxe className="w-5 h-5 text-stone-600 dark:text-stone-400" />
            <span>Top Bloques Minados</span>
          </h3>
        </div>
        <div class="p-6 space-y-4">
          {topMined.length > 0 ? (
            topMined.map((item: { item: string; count: number; }) => (
              <div class="flex items-center justify-between">
                <span class="capitalize text-muted-foreground">{item.item}</span>
                <span class="font-semibold text-foreground">{item.count.toLocaleString()}</span>
              </div>
            ))
          ) : (
            <p class="text-muted-foreground">No hay datos disponibles</p>
          )}
        </div>
      </Card>

      <!-- Top Items Crafteados -->
      <Card class="p-0 overflow-hidden">
        <div class="p-6 border-b border-border bg-muted/30">
          <h3 class="flex items-center space-x-2 text-lg font-semibold text-foreground">
            <Anvil className="w-5 h-5 text-brand-green" />
            <span>Top Items Crafteados</span>
          </h3>
        </div>
        <div class="p-6 space-y-4">
          {topCrafted.length > 0 ? (
            topCrafted.map((item, index) => (
              <div class="flex items-center justify-between">
                <span class="capitalize text-muted-foreground">{item.item}</span>
                <span class="font-semibold text-foreground">{item.count.toLocaleString()}</span>
              </div>
            ))
          ) : (
            <p class="text-muted-foreground">No hay datos disponibles</p>
          )}
        </div>
      </Card>

      <!-- Top Items Usados -->
      <Card class="p-0 overflow-hidden">
        <div class="p-6 border-b border-border bg-muted/30">
          <h3 class="flex items-center space-x-2 text-lg font-semibold text-foreground">
            <Utensils className="w-5 h-5 text-purple-600 dark:text-purple-400" />
            <span>Top Items Usados</span>
          </h3>
        </div>
        <div class="p-6 space-y-4">
          {topUsed.length > 0 ? (
            topUsed.map((item, index) => (
              <div class="flex items-center justify-between">
                <span class="capitalize text-muted-foreground">{item.item}</span>
                <span class="font-semibold text-foreground">{item.count.toLocaleString()}</span>
              </div>
            ))
          ) : (
            <p class="text-muted-foreground">No hay datos disponibles</p>
          )}
        </div>
      </Card>
    </div>

    <!-- Sección de Datos Completos (Desplegable) -->
    <Card class="p-0 overflow-hidden">
      <details class="group">
        <summary class="flex items-start justify-between p-6 cursor-pointer hover:bg-muted/30 transition-colors">
          <div class="flex items-start flex-1 space-x-3">
            <Code className="w-6 h-6 text-blue-600 dark:text-blue-400 mt-0.5" />
            <div class="flex-1">
              <h3 class="mb-2 text-lg font-semibold text-foreground">
                Datos Completos de la API
              </h3>
              <p class="text-muted-foreground">
                Visualiza los datos completos sin procesar de la API del servidor.
              </p>
            </div>
          </div>
          <div class="p-2 ml-4 text-muted-foreground transition-colors rounded-full group-hover:text-foreground">
            <ChevronDown className="w-5 h-5 transition-transform transform group-open:rotate-180" />
          </div>
        </summary>
        <div class="px-6 pb-6">
          <div class="pt-4 border-t border-border">
            <div class="p-4 rounded-lg bg-muted/50 font-mono text-sm overflow-x-auto">
              <pre class="text-muted-foreground">{JSON.stringify(rawPlayerData, null, 2)}</pre>
            </div>
          </div>
        </div>
      </details>
    </Card>
  </div>
) : (
  <div class="max-w-2xl mx-auto">
    <Card class="p-8 text-center">
      <div class="flex justify-center items-center mx-auto mb-4 w-16 h-16 rounded-full bg-brand-green/10 text-brand-green">
        <Loader2 className="w-8 h-8 animate-spin" />
      </div>
      <h2 class="mb-2 text-xl font-semibold text-foreground">Cargando estadísticas...</h2>
      <p class="text-muted-foreground">Obteniendo datos del servidor</p>
    </Card>
  </div>
)}
