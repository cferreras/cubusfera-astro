---
// Footer component
const commitHash = import.meta.env.GIT_COMMIT_HASH || 'unknown';
const repoUrl = 'https://github.com/cferreras/cubusfera-astro';
---

<footer class="mt-auto bg-gray-100 border-t border-gray-200 dark:bg-brand-bg-1 dark:border-brand-border">
    <div class="py-6 text-center">
  <p class="text-sm text-gray-600 dark:text-brand-muted">
        © {new Date().getFullYear()} Cubusfera. Servidor de Minecraft Técnico.
      </p>
      <p class="mt-2 text-xs text-gray-500 dark:text-brand-muted">
        <a 
          href={`${repoUrl}/commit/${commitHash}`}
          target="_blank"
          rel="noopener noreferrer"
          class="underline transition-colors hover:text-green-600 dark:hover:text-brand-green decoration-dotted"
        >
          {commitHash}
        </a>
      </p>
    </div>
</footer>