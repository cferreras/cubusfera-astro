---
import { Github, Twitter, MessageCircle } from "lucide-react";

const commitHash = import.meta.env.GIT_COMMIT_HASH || 'dev';
const repoUrl = 'https://github.com/cferreras/cubusfera-astro';

const links = [
  { name: "Inicio", href: "/" },
  { name: "Proyectos", href: "/proyectos" },
  { name: "Miembros", href: "/miembros" },
  { name: "Mapa", href: "/mapa" },
];

const social = [
  { name: "Discord", href: "#", icon: MessageCircle },
  { name: "GitHub", href: repoUrl, icon: Github },
  { name: "Twitter", href: "#", icon: Twitter },
];
---

<footer class="border-t border-border bg-card/50 mt-16">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      {/* Brand */}
      <div class="space-y-4">
        <h3 class="text-lg font-bold text-foreground">Cubusfera</h3>
        <p class="text-sm text-muted-foreground max-w-xs">
          Servidor técnico de Minecraft dedicado a la redstone, granjas automáticas y la optimización.
        </p>
      </div>

      {/* Links */}
      <div>
        <h3 class="text-sm font-semibold text-foreground uppercase tracking-wider mb-4">Navegación</h3>
        <ul class="space-y-3">
          {links.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-muted-foreground hover:text-brand-green transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Social & Meta */}
      <div>
        <h3 class="text-sm font-semibold text-foreground uppercase tracking-wider mb-4">Comunidad</h3>
        <div class="flex space-x-4 mb-6">
          {social.map((item) => (
            <a href={item.href} class="text-muted-foreground hover:text-brand-green transition-colors" aria-label={item.name}>
              <item.icon className="h-5 w-5" />
            </a>
          ))}
        </div>
        <div class="text-xs text-muted-foreground">
          <p>© {new Date().getFullYear()} Cubusfera.</p>
          <p class="mt-1">
            <a 
              href={`${repoUrl}/commit/${commitHash}`}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-foreground transition-colors"
            >
              v.{commitHash.substring(0, 7)}
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>