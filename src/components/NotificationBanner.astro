---
import { Info, AlertTriangle, AlertCircle, CheckCircle, X } from 'lucide-react';

// Componente de barra de notificación para avisos importantes
interface Props {
  message?: string;
  type?: 'info' | 'warning' | 'error' | 'success';
  dismissible?: boolean;
}

const {
  message = "El servidor carece de actividad de jugadores, voy a dejar el servidor cerrado hasta el próximo año mientras reorganizo y reunimos nuevos miembros.",
  type = 'warning',
  dismissible = true
} = Astro.props;

const typeStyles = {
  info: 'bg-blue-500/10 border-blue-500/20 text-blue-700 dark:text-blue-300',
  warning: 'bg-yellow-500/10 border-yellow-500/20 text-yellow-700 dark:text-yellow-300',
  error: 'bg-red-500/10 border-red-500/20 text-red-700 dark:text-red-300',
  success: 'bg-green-500/10 border-green-500/20 text-green-700 dark:text-green-300'
};

const icons = {
  info: Info,
  warning: AlertTriangle,
  error: AlertCircle,
  success: CheckCircle
};

const Icon = icons[type];
---

<div
  id="notification-banner"
  class={`notification-banner border-b ${typeStyles[type]} transition-all duration-300`}
  role="alert"
  aria-live="polite"
>
  <div class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between gap-4">
      <div class="flex items-center gap-3 flex-1">
        <Icon className="w-5 h-5 shrink-0" />
        <p class="text-sm font-medium">
          {message}
        </p>
      </div>

      {dismissible && (
        <button
          id="close-banner"
          class="shrink-0 p-1 hover:bg-black/5 dark:hover:bg-white/5 rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-current"
          aria-label="Cerrar notificación"
        >
          <X className="w-5 h-5" />
        </button>
      )}
    </div>
  </div>
</div>

{dismissible && (
  <script>
    // Función para inicializar el banner
    function initBanner() {
      const banner = document.getElementById('notification-banner');
      const closeButton = document.getElementById('close-banner');

      if (!banner || !closeButton) return;

      // Verificar si el banner fue cerrado anteriormente (usando una nueva clave para resetear el estado)
      const bannerDismissed = localStorage.getItem('notification-banner-dismissed-v2');

      if (bannerDismissed === 'true') {
        banner.style.display = 'none';
      }

      // Manejar el cierre del banner
      closeButton.addEventListener('click', () => {
        banner.style.opacity = '0';
        banner.style.transform = 'translateY(-100%)';

        setTimeout(() => {
          banner.style.display = 'none';
          localStorage.setItem('notification-banner-dismissed-v2', 'true');
        }, 300);
      });
    }

    // Inicializar cuando el DOM esté listo
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initBanner);
    } else {
      initBanner();
    }

    // Re-inicializar después de navegaciones (para SPAs con view transitions)
    document.addEventListener('astro:page-load', initBanner);
  </script>
)}

<style>
  .notification-banner {
    position: sticky;
    top: 0;
    z-index: 50;
    backdrop-filter: blur(8px);
  }
</style>
